<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="258dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/lista_curso_personalizada_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:id="@+id/lista_curso_personalizada_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescriÃ§ao"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/editar"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="editarContato"
        android:src="@android:drawable/ic_menu_edit"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/deletar"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="deletarContato"
        android:src="@drawable/baseline_delete_24"
        app:srcCompat="@android:drawable/btn_star"
        tools:src="@android:drawable/ic_menu_delete" />

</LinearLayout>