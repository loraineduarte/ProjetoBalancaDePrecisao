<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memtpadraomonofasico.apppadromonofsico">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Atividades.Avaliador.CriarAvaliadorActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Atividades.Medidor.CriarMedidorActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Atividades.Bluetooth.BluetoothActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Atividades.Bluetooth.DiscoveredDevices"
            android:parentActivityName=".Atividades.Bluetooth.BluetoothActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.RelatorioVerificacaoActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.ServicoActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.SelecionarMedidorActivity"/>
        <activity
            android:name=".Atividades.RelatorioVerificacao.Testes.InspecaoVisual.InspecaoVisualActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.Testes.Registrador.RegistradorActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.Testes.MarchaVazio.MarchaVazioActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.Testes.InspecaoConformidade.InspecaoConformidadeActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.SituacoesObservadasActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.InformacoesComplementaresActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.ResultadosFinaisActivity" />
        <activity
            android:name=".Atividades.RelatorioVerificacao.ConclusaoActivity"/>

        <activity android:name=".Atividades.RelatorioVerificacao.Testes.InspecaoVisual.ObservacaoInspecaoVisualActivity" />

        <activity android:name=".Atividades.RelatorioVerificacao.Testes.Registrador.ObservacaoRegistradorActivity"></activity>
    </application>

</manifest>
